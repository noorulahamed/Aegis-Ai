generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String        @id @default(uuid())
  name         String
  email        String        @unique
  password     String
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  tokenVersion Int           @default(0)
  role         Role          @default(USER)
  isBanned     Boolean       @default(false)
  chats        Chat[]
  memories     Memory[]
  usageMetrics UsageMetric[]
  sessions     Session[]
}

model Session {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  token     String   @unique // Hashed refresh token
  expiresAt DateTime
  createdAt DateTime @default(now())
  lastActive DateTime @default(now())
  userAgent String?
  ipAddress String?

  @@index([userId])
}

model Chat {
  id        String    @id @default(uuid())
  userId    String
  createdAt DateTime  @default(now())
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages  Message[]

  @@index([userId])
}

model Message {
  id        String   @id @default(uuid())
  content   String
  createdAt DateTime @default(now())
  chatId    String
  role      String
  chat      Chat     @relation(fields: [chatId], references: [id], onDelete: Cascade)

  @@index([chatId, createdAt])
}

model Memory {
  id        String     @id @default(uuid())
  userId    String
  type      MemoryType
  content   String
  source    String?
  createdAt DateTime   @default(now())
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, type])
}

model AuditLog {
  id        String   @id @default(uuid())
  userId    String?
  action    String
  details   String?
  createdAt DateTime @default(now())
}

model UsageMetric {
  id        String   @id @default(uuid())
  userId    String
  tokens    Int
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model File {
  id        String   @id @default(uuid())
  userId    String
  name      String
  type      String
  content   String
  createdAt DateTime @default(now())
  path      String   @default("")
}

model SystemSetting {
  key   String @id
  value String
}

enum Role {
  USER
  ADMIN
}

enum MessageRole {
  USER
  ASSISTANT
  SYSTEM
}

enum MemoryType {
  USER_FACT
  SUMMARY
}
